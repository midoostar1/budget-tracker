# Budget Tracker - Development Environment Variables Example
# Copy this to .env and fill with actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/budget_tracker?schema=public"

# ============================================
# JWT Authentication Secrets
# ============================================
# Generate with: openssl rand -base64 64
JWT_SECRET="your-jwt-secret-minimum-32-characters"
REFRESH_SECRET="your-refresh-token-secret-minimum-32-characters"

# ============================================
# Server Configuration
# ============================================
NODE_ENV="development"
PORT=3000
CORS_ORIGIN="*"
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8081,http://localhost:8082,http://10.0.2.2:3000"

# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID="your-gcp-project-id"

# ============================================
# Google OAuth Configuration
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_WEB_CLIENT_ID="your-web-client-id.apps.googleusercontent.com"
GOOGLE_ANDROID_CLIENT_ID="your-android-client-id.apps.googleusercontent.com"
GOOGLE_IOS_CLIENT_ID="your-ios-client-id.apps.googleusercontent.com"

# ============================================
# Apple Sign In (Optional)
# ============================================
# Requires Apple Developer Account
APPLE_BUNDLE_ID="com.budgettracker.app"
APPLE_TEAM_ID=""
APPLE_KEY_ID=""

# ============================================
# Facebook Login (Optional)
# ============================================
# Get from: https://developers.facebook.com
FACEBOOK_APP_ID=""
FACEBOOK_APP_SECRET=""

# ============================================
# Firebase Admin SDK (Required for Push Notifications)
# ============================================
# Base64 encode your Firebase service account JSON:
# base64 -i path/to/firebase-adminsdk.json | tr -d '\n'
FIREBASE_ADMIN_JSON_BASE64="your-base64-encoded-firebase-json-here"

# ============================================
# Google Cloud Storage (Required for Receipt Uploads)
# ============================================
GCS_BUCKET_NAME="your-bucket-name"
GCS_PROJECT_ID="your-gcp-project-id"

# ============================================
# Veryfi OCR (Optional but Recommended)
# ============================================
# Get from: https://hub.veryfi.com
VERYFI_CLIENT_ID=""
VERYFI_CLIENT_SECRET=""
VERYFI_USERNAME=""
VERYFI_API_KEY=""

# ============================================
# Cron/Scheduled Jobs
# ============================================
# Generate with: openssl rand -base64 32
CRON_SECRET="your-cron-secret"

# ============================================
# Optional Services
# ============================================
# SENTRY_DSN=""
# LOGROCKET_APP_ID=""
