# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/budget_tracker?schema=public

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-change-this-in-production
JWT_EXPIRES_IN=7d

# Social Authentication - Google
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id.apps.googleusercontent.com

# Social Authentication - Apple
APPLE_BUNDLE_ID=com.yourcompany.budgettracker
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_KEY_ID=YOUR_KEY_ID

# Social Authentication - Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Google Cloud Storage (Optional)
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GCS_KEY_FILE=path/to/service-account-key.json

# Firebase Admin SDK (Optional - for FCM push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Veryfi OCR (Receipt Processing)
VERYFI_CLIENT_ID=your-veryfi-client-id
VERYFI_CLIENT_SECRET=your-veryfi-client-secret
VERYFI_USERNAME=your-veryfi-username
VERYFI_API_KEY=your-veryfi-api-key

# Firebase Admin (Push Notifications) - Base64 encoded service account JSON
# Encode your service account JSON: base64 -i service-account.json
FIREBASE_ADMIN_JSON_BASE64=base64_encoded_service_account_json_here

# Or use individual Firebase credentials (alternative to base64)
# FIREBASE_PROJECT_ID=your-firebase-project-id
# FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# Cron/Scheduled Jobs
# Secret for protecting cron endpoints (Cloud Scheduler, etc.)
CRON_SECRET=your-secure-cron-secret-min-32-chars

# CORS Configuration
# Development: allows all origins
# Production: comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://www.yourdomain.com
# Or use single origin (legacy)
# CORS_ORIGIN=https://app.yourdomain.com
