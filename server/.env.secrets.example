# Production Secrets File
# Copy this to .env.secrets and fill with actual values
# DO NOT commit .env.secrets to version control!

# Database
DATABASE_URL=postgresql://username:password@host:5432/database_name?schema=public&sslmode=require

# JWT Authentication
JWT_SECRET=your-jwt-secret-here-minimum-32-characters-long

# Refresh Token Secret
REFRESH_SECRET=your-refresh-secret-here-minimum-32-characters-long

# Social Authentication - Google
GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com
GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com

# Social Authentication - Apple (Optional)
APPLE_BUNDLE_ID=com.yourcompany.budgettracker
APPLE_TEAM_ID=YOUR_TEAM_ID_10CHARS
APPLE_KEY_ID=YOUR_KEY_ID_10CHARS

# Social Authentication - Facebook (Optional)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Google Cloud Storage (for receipt uploads)
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-gcp-project-id

# Veryfi OCR (for receipt processing)
VERYFI_CLIENT_ID=your-veryfi-client-id
VERYFI_CLIENT_SECRET=your-veryfi-client-secret
VERYFI_USERNAME=your-veryfi-username
VERYFI_API_KEY=your-veryfi-api-key

# Firebase Admin SDK (for push notifications)
# Base64 encode your service account JSON file:
# base64 -i path/to/firebase-adminsdk.json | tr -d '\n'
FIREBASE_ADMIN_JSON_BASE64=your-base64-encoded-firebase-admin-sdk-json

# Cron/Scheduled Jobs Secret
# Generate with: openssl rand -base64 32
CRON_SECRET=your-cron-secret-here-32-characters-minimum

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://www.yourdomain.com

# GCP Project Configuration
GCP_PROJECT_ID=your-gcp-project-id

# Server Configuration
NODE_ENV=production
PORT=8080
