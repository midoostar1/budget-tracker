{
  "expo": {
    "name": "Budget Tracker",
    "slug": "budget-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "budgettracker",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366f1"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.budgettracker.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Budget Tracker needs access to your camera to scan receipts.",
        "NSPhotoLibraryUsageDescription": "Budget Tracker needs access to your photo library to upload receipt images.",
        "NSUserNotificationsUsageDescription": "Budget Tracker sends notifications for pending receipts and upcoming bills."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366f1"
      },
      "package": "com.budgettracker.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "POST_NOTIFICATIONS"
      ],
      "useNextNotificationsApi": true,
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366f1"
        }
      ],
      "expo-camera",
      "expo-image-picker"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-eas-project-id"
      },
      "apiBaseUrl": "http://10.0.2.2:3000",
      "googleWebClientId": "813467044595-u6sqdq7n6kbtgetfp8e20p6q4koogsjg.apps.googleusercontent.com",
      "googleAndroidClientId": "813467044595-qkj5ik73qbaf70q112pm88k6tt9jbfga.apps.googleusercontent.com",
      "googleIosClientId": "813467044595-qkj5ik73qbaf70q112pm88k6tt9jbfga.apps.googleusercontent.com",
      "appleServiceId": "com.budgettracker.app",
      "facebookAppId": ""
    }
  }
}
